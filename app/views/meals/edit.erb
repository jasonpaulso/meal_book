<form action="/meals/<%=@meal.id%>" method="post">
  <input type="hidden" name="_method" value="patch">
  <label>Meal Name:</label>
  <input type="text" name="meal[name]" value="<%= @meal.name %>"></input>
  <br>
  <%@meal.ingredients.uniq.each do |ingredient|%>
    <label><%=ingredient.name%>: <input type="checkbox" name="meal[ingredient_ids][]" value="<%=ingredient.id%>" checked="checked"></label>
  <%end%>
  <br>
  <h3>Choose from Existing Ingredients:</h3>
  <ul>
  <%Ingredient.all.sort.each do |ingredient|%>
    <li><label><%=ingredient.name.titleize%>: <input type="checkbox" name="meal[ingredient_ids][]" value="<%=ingredient.id%>"></label></li>
  <%end%>
  </ul>
