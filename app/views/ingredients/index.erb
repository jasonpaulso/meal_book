<div class="centered full-width">
<h1>Meals containing <%=@ingredient.name.titleize%></h1>
  <ul class="list-group full-width">
    <% @ingredient.meals.order("updated_at DESC").each do |meal|%>
    <li><h3><a href="\meals\<%=meal.id%>" class="list-group-item"><%= meal.name.titleize %>, created by: <%=meal.username.titleize%>, updated: <%=meal.updated_at.strftime("%A, %B %d, %Y")%></h3></a></li>
    <%end%>
  </ul>
</div>
